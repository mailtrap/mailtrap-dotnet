<Project>

  <PropertyGroup Label="Path Shortcuts">
    <BaseSourceDirectory>$([MSBuild]::NormalizeDirectory('$(BaseDirectory)', 'src'))</BaseSourceDirectory>
    <LibSourceDirectory>$([MSBuild]::NormalizeDirectory('$(BaseSourceDirectory)', 'lib'))</LibSourceDirectory>
    <SamplesSourceDirectory>$([MSBuild]::NormalizeDirectory('$(BaseSourceDirectory)', 'samples'))</SamplesSourceDirectory>          
  </PropertyGroup>

  <PropertyGroup Label="Artifacts Output Configuration">
    <BaseOutputDirectory>$([MSBuild]::NormalizeDirectory('$(BaseDirectory)', 'artifacts'))</BaseOutputDirectory>

    <UseCommonOutputDirectory>true</UseCommonOutputDirectory> 
    <UseArtifactsOutput>true</UseArtifactsOutput>
    <ArtifactsPath>$(BaseOutputDirectory)</ArtifactsPath>
    <ArtifactsPivots>$(Configuration)</ArtifactsPivots> 
  </PropertyGroup>

</Project>
